<%= provide(:title, @user.name) %>
<div class="row">
   <div class="col-xs-12 col-md-4">
           <section>
				<div class="panel panel-defualt">
					   <div class="well-sm">
					      <div> 
					           <li class="media">
						            <div class="media-body">
								       <span class="media-object"> <%= gravatar_for @user %> </span>	
								        <h4 class="media-heading"> <%= @user.name %></h4>
	                                       <%= render 'follow_form' if signed_in? %>
					                </div>
							   </li>
				           </div>
					   </div>
				  </div>
			</section>

		<div class="panel panel-defualt">
		<div class="well-sm"> <%= render 'shared/stats' %> <%= pluralize(@user.microposts.count, "wallpost") %></div></div>
 </div>
    <div class="col-xs-12 col-md-8">
	  <% if @user.microposts.any? %>
			<ul class="list-group">
			  <a href='#' class="list-group-item">
			       <span class="badge"><%= @user.microposts.count %></span>
			       Microposts
			  </a>
		    </ul>
	   <div class="microposts">
			<%= render @microposts %>
		</div>
		<%= will_paginate @microposts %>
	   <% end %>
	</div>

</div>
