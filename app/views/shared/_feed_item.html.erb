<div class="panel panel-defualt">
	<div class="well-sm">
	  <li class="media">
	   <div id="<%= feed_item.id %>"><span class="media-object">
			<%= link_to gravatar_for(feed_item.user), feed_item.user %></span>
			<span class="media-heading">
			<%= link_to feed_item.user.name, feed_item.user %>
			</span>
	   </div>

	      <span><%= feed_item.content %></span>
	
	   </li>
	</div>

	
	<div class="panel-footer">
	       <span class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
	       </span>
	       <% if current_user?(feed_item.user) %>
						<%= link_to "delete", feed_item, method: :delete,
						data: { confirm: "You sure?" },
						title: feed_item.content , class: "pull-right btn btn-xs label label-warning"%>
<% end %>
	 </div>
</div>
 

